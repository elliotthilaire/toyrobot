#!/usr/bin/env ruby

require_relative '../toyrobot'

toyrobot = ToyRobot.new

if filepath = ARGV[0]
  file = IO.read(filepath)
  toyrobot.run(file)
else

  while
    command = gets
    break if command == "EXIT\n"
    toyrobot.run(command)
    puts toyrobot.report if command == "REPORT\n"
  end
end
